{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES5",
      "ES6"
    ],
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "checkJs": false,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "typechain/**/*",
    "index.ts",
    "*.config.ts"
  ]
}